#include "led.h"
#include "delay.h"
#include "key.h"
#include "sys.h"
#include "lcd.h"
#include "usart.h"	 
#include "adc.h"
#include "lsens.h"
#include "dht11.h"
#include "beep.h" 

 
 int main(void)
 {	 
    #define LIGHT_THRESHOLD 90
    #define Temperature_THRESHOLD 50 
    u8 t=0;			    
	u8 temperature;  	    
	u8 humidity; 
 	u8 adcx; 
	delay_init();	    	 //延时函数初始化	  
	NVIC_PriorityGroupConfig(NVIC_PriorityGroup_2);//设置中断优先级分组为组2：2位抢占优先级，2位响应优先级
	uart_init(115200);	 	//串口初始化为115200
	LED_Init();		  		//初始化与LED连接的硬件接口
  	LCD_Init();				//初始化LCD
	Lsens_Init(); 			//初始化光敏传感器
    BEEP_Init();         	//初始化蜂鸣器端口
     
     
	POINT_COLOR=RED;//设置字体为红色  	
	//显示提示信息
	LCD_ShowString(30,10,200,16,16,"Guangzhao & Wenshidu");     
	LCD_ShowString(30,30,200,16,16,"2025/11/14");	  
	POINT_COLOR=BLUE;//设置字体为蓝色
	LCD_ShowString(30,90,200,16,16,"LSENS_VAL:");
//     温湿度显示
     while (DHT11_Init())    // 循环等待DHT11初始化成功
	{
		LCD_ShowString(30,130,200,16,16,"DHT11 Error");
		delay_ms(200);
		LCD_Fill(30,130,239,130+16,WHITE); // 清除错误提示
		delay_ms(200);
	}
     LCD_ShowString(30,130,200,16,16,"DHT11 OK");
     POINT_COLOR=RED;
    LCD_ShowString(30,50,200,16,16,"Temp:  C");	 
 	LCD_ShowString(30,70,200,16,16,"Humi:  %");

    
     
	while(1)
	{
        
        
        if(t % 10 == 0)  // 每100ms刷新光敏值
        {
        adcx = Lsens_Get_Val();
        LCD_ShowxNum(110,90,adcx,3,16,0);
// 光照强度判断
        if(adcx > LIGHT_THRESHOLD)    // 阈值为60
        {
//             BEEP = !BEEP;    // 蜂鸣器响
        }
            else
        {
            BEEP = 0;    // 蜂鸣器关闭
        }
        }
        
        
//        温湿度
        if(t%100==0)			//每1000ms读取一次
		{									  
			DHT11_Read_Data(&temperature,&humidity);	//读取温湿度值					    
			LCD_ShowNum(30+40,50,temperature,2,16);	//显示温度	   		   
			LCD_ShowNum(30+40,70,humidity,2,16);		//显示湿度	
// 光照强度判断   
            if(temperature >=Temperature_THRESHOLD)    // 阈值为50
        {
//            BEEP = 1;    // 蜂鸣器响
        }
        else
        {
            BEEP = 0;    // 蜂鸣器关闭
        }
       
		}				   
	 	delay_ms(10);
        t++;
		if(t>=100)
		{
			t=0;
//			LED0=!LED0;
		}
        
        
        
        
	}
}
 
